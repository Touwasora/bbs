@model bbs.Models.Post

@{
	ViewData["Title"] = "Create";
	var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
	var userName = User.Identity.Name;
	var currentTime = DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss");
}

<h1>新規登録</h1>

<h4>Post</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Content" class="control-label"></label>
				<textarea asp-for="Content" class="form-control"></textarea>
				<input type="hidden" asp-for="UserId" value="@userId" />
				<input type="hidden" asp-for="UserName" value="@userName" />
				<input type="hidden" asp-for="CreatedAt" value="@currentTime" />
				<div class="form-group">
					<input type="submit" value="登録" class="btn btn-primary" />
					<a class="btn btn-warning" asp-action="Index">戻る</a>
				</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}