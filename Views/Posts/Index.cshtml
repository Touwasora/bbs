@model PostViewModel

@{
    ViewData["Title"] = "Index";
    // 获取当前用户的UserId
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">新規登録</a>
</p>

@if (User.Identity.IsAuthenticated){
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label for="SearchString">検索</label>
            <input type="text" name="searchString" value="@Model.SearchString" class="form-control" placeholder="Search by name" />
        </div>
        <div class="form-group">
            <label for="SortOrder">順序</label>
            <select asp-for="SortOrder" asp-items="@Model.SortOptions" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-primary">適用</button>
    </form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Posts.First().Content)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Posts.First().UserName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Posts.First().CreatedAt)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @if (item.UserId.ToString() == currentUserId)
                    {
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">編集</a>
                        <a asp-action = "Details" class="btn btn-success" asp-route-id = "@item.Id" >詳細</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">削除</a>
                    }
                    else
                    {
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">詳細</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
}